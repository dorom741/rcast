# Rcast Configuration
# Copy this file to .env and modify as needed

# UUID file path
# Default: ~/.local/rcast/dmr_uuid.txt
DMR_UUID_PATH=

# Allow session preemption
# Default: true
DMR_ALLOW_PREEMPT=true

# Link system output volume
# Default: false
DMR_LINK_SYSTEM_VOLUME=false

# HTTP port for DLNA server
# Default: 8200
DMR_HTTP_PORT=8200

# Player type (iina | aria2)
# Default: iina
DMR_PLAYER_TYPE=iina

# Aria2 RPC URL (only used when PLAYER_TYPE=aria2)
# Default: http://localhost:6800/jsonrpc
DMR_ARIA2_RPC_URL=http://localhost:6800/jsonrpc

# Aria2 RPC password (only used when PLAYER_TYPE=aria2)
# Default: (empty)
DMR_ARIA2_RPC_PASSWORD=